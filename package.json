    "hijack",
    "repel",
    "attract",
    "deflect"
  ],
  "author": "Djordje Ungar",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ArtBIT/gravity-cursor/issues"
  },
  "homepage": "https://github.com/ArtBIT/gravity-cursor#readme",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "http-server": "^0.9.0",
    "open": "0.0.5"
  }
}
