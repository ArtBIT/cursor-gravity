{
  "name": "gravity-cursor",
  "version": "1.0.0",
  "description": "Hijack user cursor and make it react to attractive/deflective forces on the page.",
  "main": "src/index.js",
  "scripts": {
    "build": "babel src/index.js > dist/index.js",
    "serve": "http-server -p 9090 .",
